@model RegistrationModel

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Регистрация</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div id="alert_placeholder_register">
            </div>
            
            <form id="UserRegistrationForm" name="UserRegistrationForm" asp-controller="UserAuth" asp-action="RegisterUser">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RegistrationInValid" />

                <div class="form-group row">
                    <label asp-for="Email" class="col-md-4 col-form-label"></label>
                    <div>
                        <input asp-for="Email" placeholder="E-mail адрес" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Password" class="col-md-4 col-form-label"></label>
                    <div>
                        <input asp-for="Password" placeholder="Пароль" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="ConfirmPassword" class="col-md-4 col-form-label"></label>
                    <div>
                        <input asp-for="ConfirmPassword" placeholder="Подтвердите пароль" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="FirstName" class="col-md-4 col-form-label"></label>
                    <div>
                        <input asp-for="FirstName" placeholder="Имя" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="LastName" class="col-md-4 col-form-label"></label>
                    <div>
                        <input asp-for="LastName" placeholder="Фамилия" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Address" class="col-md-4 col-form-label"></label>
                    <div>
                        <input asp-for="Address" placeholder="Полный адрес" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="PostCode" class="col-md-4 col-form-label"></label>
                    <div>
                        <input asp-for="PostCode" placeholder="Индекс" class="form-control" />
                        <span asp-validation-for="PostCode" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="PhoneNumber" class="col-md-4 col-form-label"></label>
                    <div>
                        <input asp-for="PhoneNumber" placeholder="Номер телефона" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group-row">
                    <div class="col-md-8 offset-md-4">
                        <div class="form-check">
                            <input asp-for="AcceptUserAgreement" class="form-check-input">
                            <label asp-for="AcceptUserAgreement" class="form-check-label"></label>
                        </div>
                    </div>
                </div>

            </form>


        </div>
        <div class="modal-footer">
            <button class="btn btn-link" data-dismiss="modal" data-toggle="modal" data-target="#UserLoginModal" > Уже зарегестрированы? Выполните вход </button>

            <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
            <button id="register" name="register" type="button" class="btn btn-primary">Регистрация</button>
        </div>
    </div>
</div>
