                <div class="col-2">
                    <button value="Item_id" class="btn buy_button" style="height: 40px" type="submit" name="action">Поиск </button>
                </div>
            </div>
        </form>

        <form asp-action="Search">
            <div class="row" style="margin: 0px 0px 10px 0px; text-align:start">
                <div class="col-2">
                    <label class="control-label">Название:</label>
