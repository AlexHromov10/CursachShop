                    <button value="Category_id" class="btn buy_button" style="height: 40px" type="submit" name="action">Поиск </button>
                </div>
            </div>
        </form>

        <form asp-action="Search">
            <div class="row" style="margin: 0px 0px 10px 0px; text-align:start">
                <div class="col-2">
                    <label class="control-label">Название:</label>
                </div>
                <div class="col-8 justify-content-start">
                    <input asp-for="categoryTitle" class="form-control" />
                    <span asp-validation-for="categoryTitle" class="text-danger"></span>
                </div>
                <div class="col-2">
                    <button value="Category_title" class="btn buy_button" style="height: 40px" type="submit" name="action">Поиск </button>
