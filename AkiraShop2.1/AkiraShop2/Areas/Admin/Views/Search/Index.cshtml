@model AkiraShop2.Areas.Admin.Models.SearchModel
@{
    ViewData["Title"] = "Поиск по конкретным значениям";
}



<div class="row justify-content-center">
    <div class="item_DIV_error col-8" style="margin: 0px 0px 20px 0px">
        <h1>Поиск по конкретным значениям</h1>
    </div>


    <div class="item_DIV_error col-8" style="margin-bottom: 20px">
        <h3 style="margin-bottom: 10px">Заказ</h3>
        <form asp-action="Search">
            <div class="row " style="margin: 0px 0px 10px 0px; text-align: start">
                <div class="col-2">
                    <label class="control-label">ID:</label>
                </div>
                <div class="col-8 justify-content-start">
                    <input asp-for="orderId" class="form-control" />
                    <span asp-validation-for="orderId" class="text-danger"></span>
                </div>
                <div class="col-2">
                    <button value="Order_id" class="btn buy_button" style="height: 40px" type="submit" name="action">Поиск </button>
                </div>
            </div>
        </form>
    </div>



    <div class="item_DIV_error col-8" style="margin-bottom: 20px">
        <h3 style="margin-bottom: 10px">Пользователь</h3>
