                <div class="col-8 justify-content-start">
                    <input asp-for="userNumber" class="form-control" />
                    <span asp-validation-for="userNumber" class="text-danger"></span>
                </div>
                <div class="col-2">
                    <button value="User_number" class="btn buy_button" style="height: 40px" type="submit" name="action">Поиск </button>
                </div>
            </div>
